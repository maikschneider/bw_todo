{
  "name": "blueways/bw-todo",
  "description": "TYPO3 extension for move:elevator application test",
  "type": "typo3-cms-extension",
  "authors": [
    {
      "name": "Maik Schneider",
      "email": "schneider.maik@me.com",
      "role": "Developer"
    }
  ],
  "require": {
    "typo3/cms-backend": "^11.5",
    "typo3/cms-belog": "^11.5",
    "typo3/cms-beuser": "^11.5",
    "typo3/cms-core": "^11.5",
    "typo3/cms-extbase": "^11.5",
    "typo3/cms-extensionmanager": "^11.5",
    "typo3/cms-frontend": "^11.5",
    "typo3/cms-impexp": "^11.5",
    "typo3/cms-install": "^11.5",
    "typo3/cms-lowlevel": "^11.5",
    "typo3/cms-recordlist": "^11.5",
    "typo3/cms-setup": "^11.5",
    "typo3/cms-tstemplate": "^11.5",
    "helhum/typo3-console": "^7.0",
    "blueways/deployer-recipes": "^2.0"
  },
  "repositories": [
    {
      "type": "git",
      "url": "https://github.com/maikschneider/testing-framework"
    }
  ],
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "typo3/testing-framework": "dev-main",
    "friendsofphp/php-cs-fixer": "^3.6.0",
    "saschaegerer/phpstan-typo3": "^1.1.2"
  },
  "autoload": {
    "psr-4": {
      "Blueways\\BwTodo\\": "Classes"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Blueways\\BwTodo\\Tests\\": "Tests"
    }
  },
  "extra": {
    "typo3/cms": {
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": "public",
      "extension-key": "bw_todo"
    },
    "helhum/dotenv-connector": {
      "env-file": ".env",
      "adapter": "Helhum\\DotEnvConnector\\Adapter\\SymfonyDotEnv"
    }
  },
  "config": {
    "vendor-dir": "vendor",
    "allow-plugins": {
      "typo3/*": true,
      "helhum/dotenv-connector": true
    }
  },
  "scripts": {
    "typo3-cms-scripts": [
      "ln -sfn ../../../ public/typo3conf/ext/bw_todo",
      "vendor/bin/typo3cms install:fixfolderstructure"
    ],
    "post-autoload-dump": [
      "@typo3-cms-scripts"
    ],
    "tests": [
      "vendor/bin/phpunit -c Build/FunctionalTests.xml Tests/Functional"
    ],
    "lint": [
      "vendor/bin/php-cs-fixer fix Classes",
      "vendor/bin/phpstan analyse Classes --level=1"
    ]
  }
}
